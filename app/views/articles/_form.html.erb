<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-info rounded", local: true)  do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-lable text-light" %>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Artcle" %>
            </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of Artcle" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
  </div>
    <div class="class="form-group row justify-content-center">
      <%= link_to '[ Cancel & Return to article listings ]', articles_path(@article), class: "text-info" %>
    </div>
  </div> 
</div>